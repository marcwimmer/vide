#!/bin/bash
CURRENT_DIR="$(pwd)"
DIR=$( cd "$( dirname $(realpath "${BASH_SOURCE[0]}") )" && pwd )
DIR=$(realpath "$DIR")
cd "$DIR"

docker-compose run \
	--rm \
	--workdir="$CURRENT_DIR" \
	--volume="$HOME:$HOME" \
	--volume="$CURRENT_DIR:$CURRENT_DIR" \
	-e LOCAL_UID="$(id -u "$(whoami)")" \
	vide /start.sh "$@"
